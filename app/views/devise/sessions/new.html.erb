<div class="container devise">
  <div class="devise-box">
    <p>ログイン</p>
    <div class="devise-form">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field form-row">
          <div class="col-2 required">

          </div>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "メールアドレス", class: "col-10 form-controll" %>
        </div>

        <div class="field form-row">
          <div class="col-2 required">

          </div>
          <%= f.password_field :password, autocomplete: "current-password", placeholder: "パスワード", class: "col-10 form-controll" %>
        </div>
        <div class="actions">
          <%= f.submit "ログイン", class: "form-controll btn btn-primary" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
