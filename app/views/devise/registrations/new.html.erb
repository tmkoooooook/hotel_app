<div class="container devise">
  <div class="devise-box">
    <p>新しいアカウントを作成</p>
    <div class="devise-form">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <div class="field form-row">
          <div class="col-2 required">
          </div>
          <%= f.text_field :name, autofocus: true, autocomplete: "name", placeholder: "ユーザー名", class: "col-10 form-controll" %>
        </div>
        <div class="field form-row">
          <div class="col-2 required">
          </div>
          <%= f.email_field :email, autocomplete: "email", placeholder: "メールアドレス", class: "col-10 form-controll" %>
        </div>
        <div class="field form-row">
          <div class="col-2 required">
          </div>
          <%= f.password_field :password, autocomplete: "new-password", placeholder: "パスワード", class: "col-10 form-controll" %>
        </div>
        <div class="field form-row">
          <div class="col-2 required">
          </div>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "パスワード確認", class: "col-10 form-controll" %>
        </div>
        <div class="actions">
          <%= f.submit "新しいアカウントを作成", class: "form-controll btn btn-primary" %>
        </div>
      <% end %>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
